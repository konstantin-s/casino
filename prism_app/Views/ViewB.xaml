<UserControl x:Class="prism_app.Views.ViewB"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:prism_app.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.75*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="0.25*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="Red">
            <Grid>
                <StackPanel>
                    <Label>ViewB</Label>
                    <Button Content="кнопка1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Red" Opacity="0.9" />
                </StackPanel>
            </Grid>
        </Grid>
        <GridSplitter Grid.Row="1" ShowsPreview="False" Height="3" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
        <Grid Grid.Row="2" Background="Red">
            <Button Content="кнопка2" Background="Blue" Opacity="0.9" />
        </Grid>
    </Grid>
</UserControl>